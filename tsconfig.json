{
  "include": ["./src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist/",
    "lib": ["es6", "ScriptHost"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "strict": true,
    "experimentalDecorators": true,
    "module": "es6",
    "target": "es6",
    "jsx": "preserve",
    "allowJs": true
  }
}